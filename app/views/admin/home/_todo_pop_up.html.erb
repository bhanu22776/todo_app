<div id="todo_popup_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add ToDO</h4>
      </div>
      <div class="modal-body">
        <%= form_tag admin_project_todo_path(project), method: :post, remote: true do %>
          <div class="form-group">
            <%= label_tag :title %>  
            <%= text_field_tag :title, '', autofocus: true, required: true, class: 'form-control' %>          
          </div>
          <div class="form-group">          
            <%= label_tag :description %>  
            <%= text_area_tag :description, '', class: 'form-control' %>  
          </div>
          <%= submit_tag "Add", class: 'btn btn-info' %>    
        <% end %> 
      </div>
    </div>
  </div>
</div>